@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<EcommerceWebsite.Models.Size>

@{
    ViewData["Title"] = "Danh sách size - Trang: " + ViewBag.CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h2 class="header-title">Orders List</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>

            <span class="breadcrumb-item active">Danh sách size: @ViewBag.CurrentPage</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-right">
                <a class="btn btn-primary" asp-controller="AdminSizes" asp-action="Create"><i class="anticon anticon-plus-circle m-r-5"></i>Thêm mới màu sắc</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Màu sắc</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.SizeId
                                </td>
                                <td>
                                    @item.SizeName
                                </td>
                                <td>
                                    
                                    <div style="display:flex;">
                                        <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminSizes" asp-action="Edit" asp-route-id="@item.SizeId">Edit</a>
                                        <form asp-action="Delete" asp-route-id="@item.SizeId" method="post"
                                      onclick="return confirm('Are you sure you want to delete this?')">
                                            <button type="submit" class="btn btn-success btn-tone m-r-5">Delete</button>
                                        </form>
                                    </div>

                                </td>
                            </tr>
                        }
                    }


                </tbody>
            </table>
            <div aria-label="Page navigation example">
                <ul class="pagination">
                    <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminSizes" asp-action="Index">

                    </pager>
                </ul>

            </div>
        </div>
    </div>
</div>



