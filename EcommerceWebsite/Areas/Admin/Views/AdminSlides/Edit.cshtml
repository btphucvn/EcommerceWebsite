@model EcommerceWebsite.Models.Slide

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h2 class="header-title">Orders List</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="AdminSlides" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminSlides" asp-action="Index">Danh sách Slide</a>
            <span class="breadcrumb-item active">Tạo mới Slide</span>
        </nav>
    </div>
</div>
<form asp-controller="AdminSlides" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger">
    </div>
    <input type="hidden" asp-for="SlideId" />
    <input type="hidden" asp-for="Thumb" />

    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="media align-items-center m-b-15">
            </div>
            <div class="m-b-15">
                <button type="submit" class="btn btn-primary">
                    <i class="anticon anticon-plus-circle"></i>
                    <span>Lưu</span>
                </button>
            </div>
        </div>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="Thumb">Ảnh: </label>
                        </br>
                        <img width="200" height="100" src="~/images/slides/@Model.Thumb" />

                        <input name="fThumb" type="file" class="form-control" asp-for="Thumb">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="Link">Link: </label>
                        <input type="text" class="form-control" asp-for="Link">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="Sort">Thứ tự: </label>
                        <input type="text" class="form-control" asp-for="Sort">
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>




