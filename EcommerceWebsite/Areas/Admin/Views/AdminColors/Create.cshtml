@model EcommerceWebsite.Models.Color

@{
    ViewData["Title"] = "Tạo mới màu sắc";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h2 class="header-title">Orders List</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="AdminColors" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminColors" asp-action="Index">Danh sách màu sắc</a>
            <span class="breadcrumb-item active">Tạo mới màu sắc</span>
        </nav>
    </div>
</div>
<form asp-controller="AdminColors" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger">
    </div>

    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="media align-items-center m-b-15">
            </div>
            <div class="m-b-15">
                <button type="submit" class="btn btn-primary">
                    <i class="anticon anticon-plus-circle"></i>
                    <span>Tạo mới màu sắc</span>
                </button>
            </div>
        </div>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="ColorCode">Màu sắc:</label>
                        <input type="color" class="form-control" asp-for="ColorCode" style="height:3rem; width:7rem">
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
